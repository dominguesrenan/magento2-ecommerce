<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">lista_sugestoes_form.lista_sugestoes_form_data_source</item>
            <item name="deps" xsi:type="string">lista_sugestoes_form.lista_sugestoes_form_data_source</item>
            <item name="namespace" xsi:type="string">lista_sugestoes_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Bistwobis\ListaSugestoes\Block\Adminhtml\Lista\Edit\BackButton"/>
            <button name="save" class="Bistwobis\ListaSugestoes\Block\Adminhtml\Lista\Edit\SaveButton"/>
        </buttons>
        <namespace>lista_sugestoes_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>lista_sugestoes_form.lista_sugestoes_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="lista_sugestoes_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Bistwobis\ListaSugestoes\Model\Lista\DataProvider"
                      name="lista_sugestoes_form_data_source">
            <settings>
                <requestFieldName>lista_id</requestFieldName>
                <primaryFieldName>lista_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    
    <fieldset name="general">
        <settings>
            <label translate="true">General Information</label>
        </settings>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">TÃ­tulo</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">lista</item>
                    <item name="dataScope" xsi:type="string">title</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="description" formElement="textarea">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Description</label>
            </settings>
        </field>
        <field name="tipo_cliente">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Tipo de Cliente</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">lista</item>
                    <item name="dataScope" xsi:type="string">tipo_cliente</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>

    <fieldset name="products" sortOrder="30">
        <settings>
            <label translate="true">Products</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <insertListing name="product_listing">
            <settings>
                <dataScope>product_listing</dataScope>
                <cols>
                    <column name="entity_id">
                        <settings>
                            <label translate="true">ID</label>
                            <sorting>asc</sorting>
                        </settings>
                    </column>
                    <column name="name">
                        <settings>
                            <label translate="true">Name</label>
                        </settings>
                    </column>
                    <column name="sku">
                        <settings>
                            <label translate="true">SKU</label>
                        </settings>
                    </column>
                </cols>
            </settings>
        </insertListing>
    </fieldset>

    <fieldset name="customer_groups">
        <settings>
            <label translate="true">Customer Groups</label>
        </settings>
        <field name="customer_groups" formElement="multiselect">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Customer Groups</label>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Magento\Customer\Ui\Component\Listing\Column\Group\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>
</form> 